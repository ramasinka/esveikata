<?xml version="1.0" encoding="UTF-8"?>
<!-- Išduotas nedarbingumo pažymėjimas / Certificate of Incapacity for Work -->
<!-- data-element-18 -->
<DocumentReference xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/documentreference.xsd">

    <!-- 1..1 -->
    <!-- Išduoto nedarbingumo pažymėjimo/pažymos numeris / Certificate of Incapacity No. -->
    <!-- data-element-1810 -->
    <masterIdentifier>
        <!-- 0..1 -->
        <system value="http://esveikata.lt/Identifier/CertificateNumber"/>
        <value value="XX-XXXXXXX"/>
    </masterIdentifier>

    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kuriam išduotas pažymėjimas, resursą / Patient of certificate -->
    <subject>
        <reference value="Patient/123456/_history/1"/>
    </subject>

    <!-- 1..1 -->
    <!-- data-element-1840 -->
    <!-- Dokumento tipas / Document type it references to -->
    <!-- Classificator: document-type -->
    <type>
        <coding>
            <system value="http://esveikata.lt/classifiers/Document/Type"/>
            <code value="nedarbingumo_pazymejimas"/>
            <display value="Nedarbingumo pažymėjimas"/>
        </coding>
    </type>

    <!-- 1..1 -->
    <!-- Informacija apie pažymėjimą pateikusį specialistą / The author of certificate -->
    <author>
        <reference value="Practitioner/12346/_history/1"/>
    </author>

    <!-- 1..1 -->
    <!-- Dokumento sukūrimo (pateikimo SODRAI) data / Document creation (submission to SODRA) date -->
    <created value="2005-12-24T09:43:41+11:00"/>

    <!-- 1..1 -->
    <!-- Data, kada buvo sukurta ši nuoroda / When this reference was created -->
    <indexed value="2005-12-24T09:43:41+11:00"/>

    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- Nuorodos būsena / The status of this document reference -->
    <!-- Values: "current" (by default) -->
    <status value="current"/>

    <!-- Dokumento būsena SODRA sistemoje / Document status in SODRA system (in case then certificate of incapacity is created) -->
    <docStatus>
        <coding>
            <system value="http://epts.sodra.lt/Document/Status"/>
            <code value="UZREGISTRUOTAS"/>
        </coding>
    </docStatus>

    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- The mime type of the source document -->
    <!-- Values: "text/plain" (by default) -->
    <mimeType value="text/plain"/>

    <context>
        <period>
            <!-- 1..1 -->
            <!-- Nedarbingumo pradžios data / Incapacity Start Date -->
            <!-- data-element-1820 -->
            <start value="2004-12-23T08:00:00"/>

            <!-- 1..1 -->
            <!-- Nedarbingumo pabaigos data / Incapacity End Date-->
            <!-- data-element-1830 -->
            <end value="2004-12-23T08:01:00"/>
        </period>
    </context>
</DocumentReference>
