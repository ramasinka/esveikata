<?xml version="1.0" encoding="UTF-8"?>
<!-- 0..1 -->
<!-- 3.3.3.6 Išrašytas siuntimo dokumentas / Reference to prepared document (E027, E200, E014) -->

<DocumentReference xmlns="http://hl7.org/fhir">

    <!-- 1..1 -->
    <!-- Dokumento identifikatorius "Documents" integraciniame taške / Doc identifier in "Documents" endpoint -->
    <masterIdentifier>
        <system value="Documents"/>
        <value value="123456789"/>
    </masterIdentifier>

    <!-- 1..1 -->
    <!-- Dokumento antraštės identifikatorius "Composition" integraciniame taške / Doc identifier in "Composition" endpoint -->
    <identifier>
        <system value="Composition"/>
        <value value="1234567978"/>
    </identifier>

    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kuriam pateikiamas dokumentas, resursą / Patient of document -->
    <subject>
        <reference value="Patient/1000017309/_history/1000018374"/>
    </subject>

    <!-- 1..1 -->
    <!-- data-element-1840 -->
    <!-- Dokumento tipas / Document type it references to -->
    <type>
        <coding>
            <!-- 1..1 -->
            <!-- Dokumento tipas / Document type by loinc. Document type it references to -->
            <!-- Classificator: doc-code -->
            <system value="http://loinc.org"/>
            <code value="57133-1"/>
        </coding>

        <!-- 1..1 -->
        <!-- Dokumento pavadinimas / Document title -->
        <text value="Medicinos dokumentų išrašas / siuntimas"/>
    </type>

    <!-- 1..1 -->
    <!-- Informacija apie dokumentą pateikusį specialistą / Info about specialist who has created this document -->
    <author>
        <reference value="Practitioner/1000015885/_history/1000016940"/>
    </author>

    <!-- 1..1 -->
    <!-- Informacija apie dokumentą pateikusią SPĮ / Info about HIS who has created this document-->
    <custodian>
        <reference value="Organization/1000015882/_history/1000016937"/>
    </custodian>

    <!-- 1..1 -->
    <!-- Dokumento sukūrimo data / Document creation date -->
    <created value="2014-10-27T18:43:41+02:00"/>

    <!-- 1..1 -->
    <!-- Data, kada buvo sukurta ši nuoroda / When this reference was created -->
    <indexed value="2014-10-27T18:43:41+02:00"/>

    <!-- 1..1 -->
    <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory -->
    <!-- Nuorodos būsena / The status of this document reference -->
    <!-- Values: "current" (by default) -->
    <!-- Classificator: document-reference-status -->
    <status value="current"/>

    <!-- 1..1 -->
    <!-- Medicininio dokumento būsena iš kompozicijos būsenų + "signed" pasirašytam dokumentui / Medical document state derived from Composition states + signed status for signed docs -->
    <!-- Classificator: document-status -->
    <docStatus>
        <coding>
            <system value="http://esveikata.lt/classifiers/Document/Status"/>
            <code value="signed"/>
        </coding>
    </docStatus>

    <!-- 1..1 -->
    <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory -->
    <!-- The mime type of the source document -->
    <!-- Values: "text/plain" (by default) -->
    <mimeType value="text/xml"/>
</DocumentReference>
