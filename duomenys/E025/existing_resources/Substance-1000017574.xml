<?xml version="1.0" encoding="UTF-8"?>
<!-- Vaisto komponento sudedamoji medžiaga / Medication component ingredient -->
<Substance xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/substance.xsd">

    <!-- 0..1 -->
    <!-- Kontroliuojamos medžiagos tipas / Controlled substance type -->
	<!-- Classificator: controlled-type -->
    <extension url="http://esveikata.lt/Profile/ltnhr-substance#controlledType">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/ControlledType"/>
                <code value="1"/>
                <display value="Narkotinė"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 0..1 -->
    <!-- Veikliosios medžiagos šaltinis / Substance source -->
	<!-- Classificator: substance-source -->
    <extension url="http://esveikata.lt/Profile/ltnhr-substance#substanceSource">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Substance/SubstanceSource"/>
                <code value="1"/>
                <display value="INN"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 0..1 -->
    <!-- Požymis ar medžiaga yra veiklioji / active ingridient -->
    <extension url="http://esveikata.lt/Profile/ltnhr-substance#active">
        <valueBoolean value="true"/>
    </extension>
    
    <!-- 0..1 -->
    <!-- Požymis ar medžiaga yra pagalbinė / auxiliary ingridient -->
    <extension url="http://esveikata.lt/Profile/ltnhr-substance#auxiliary">
        <valueBoolean value="true"/>
    </extension>
   
    <!-- 0..1 -->
    <!-- Sudedamosios medžiagos pavadinimas anglų kalba / The name of substance in english -->
    <!-- Classificator:  -->
	<extension url="http://esveikata.lt/Profile/ltnhr-medication#typeEn">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Substance/MedicationIngredientType"/>
                <code value="1"/>
                <display value="Sodium hydrogen carbonate"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 0..1 -->
    <!-- Sudedamosios medžiagos pavadinimas lotynų kalba / The name of substance in latin -->
    <!-- Classificator:  -->
	<extension url="http://esveikata.lt/Profile/ltnhr-medication#typeLa">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Substance/MedicationIngredientType"/>
                <code value="1"/>
                <display value="Sodium hydrogen carbonate"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 1..1 -->
    <!-- Sudedamosios medžiagos pavadinimas / The name of substance -->
	<!-- Classificator: substance-medication-ingredient-type -->
    <type>
        <coding>
            <system value="http://esveikata.lt/classifiers/Substance/MedicationIngredientType"/>
            <code value="1"/>
            <!-- Pilnas pavadinimas lietuvių kalba / full name of substance in LT -->
            <display value="Natrio-vandenilio karbonatas"/>
        </coding>
    </type>
</Substance>
