<?xml version="1.0" encoding="UTF-8"?>
<AllergyIntolerance xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/allergyintolerance.xsd">
    
    <!-- 1...1 -->
    <!-- Alergijos TLK-10-AM kodas ir pavadinimas / Allergy code and name -->
    <extension url="http://esveikata.lt/Profile/ltnhr-allergyintolerance#code">
        <valueCodeableConcept>
            
            <!-- 1...1 -->
            <!-- Alergijos kodas / Allergy code -->
            <coding>
                <system value="http://esveikata.lt/classifiers/TLK-10-AM"/>
                <code value="1234"/>
            </coding>
            
            <!-- 1...1 -->
            <!-- Alergijos pavadinimas / Allergy name -->
            <text value="Dust allergy"/>
        </valueCodeableConcept>
    </extension>
    
    <!-- 1...1 -->
    <!-- Alergijos aprasymas / Allergy textual description -->
    <extension url="http://esveikata.lt/Profile/ltnhr-allergyintolerance#description">
        <valueString value="Allergy to Home Dust"/>
    </extension>
    
    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- Jautrumo būsena / The status of the adverse sensitivity -->
    <!-- Values: "allergy" (pagal nutylėjimą / by default) -->
    <sensitivityType value="allergy"/>
    
    <!-- 0...1 -->
    <!-- Apytikslė nustatymo data / Date when the allergy was set -->
    <recordedDate value="2014-02-01T09:12:40.031+02:00"/>
    
    <!-- 1..1 --> 
    <!-- Alergijos įrašo būsena / Allergy status -->
    <!-- Values: "confirmed" nustatytai alergijai pagal nutylėjimą, "refuted" - jeigu alergija atšaukta (buvo klaidingai įvesta) -->
    <status value="confirmed"/>
    
    <!-- 1...1 -->
    <!-- Pacientas, kuriam nustatyta alergija / Reference to the patient who has allergy -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>
    
    <!-- 1...1 -->
    <!-- Alergija nustatęs specialistas / Reference to the specialist resource -->
    <recorder>
        <reference value="Practitioner/123/_history/1"/>
    </recorder>
    
    <!-- 1...1 -->
    <!-- Alergiją sukelianti medžiaga / The substance that causes the allergy -->
    <substance>
        <reference value="Substance/123456789/_history/1"/>
    </substance>
</AllergyIntolerance>