<?xml version="1.0" encoding="UTF-8"?>
<Observation xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/observation.xsd">
    <name>
        <!-- 1..1 -->
        <!-- Classificator: observation-code -->
        <coding>
            <system value="http://snomed.info/sct"/>
            <code value="21134002"/>
        </coding>
    </name>

    <!-- 1..1 -->
    <!-- Paciento neįgalumo lygis / Conclusion Type -->
    <!-- Classificator: ndnt-conclusion-type -->
    <valueCodeableConcept>
        <coding>
            <system value="http://esveikata.lt/classifiers/NDNTConclusionType"/>
            <code value="1"/>
            <display value="Neįgalumo lygis"/>
        </coding>
    </valueCodeableConcept>

    <!-- 1..1 -->
    <!-- Negalios aprašymas / Observation disability description -->
    <interpretation>
        <text value="Sunkus neįgalumo lygis"/>
    </interpretation>

    <!-- 0..1 -->
    <comments value="Nustatyto nedarbingumo priežastis"/>

    <!-- 1..1 -->
    <!-- Paciento negalios vertinimo periodas (nuo iki) / Period (start end date) of patient disability -->
    <appliesPeriod>
        <start value="2004-02-04"/>
        <end value="2009-01-01"/>
    </appliesPeriod>

    <!-- 1..1 -->
    <!-- Apžiūros duomenų būsena "final" arba "entered in error" atšauktiems duomenims / "final" or "entered in error" for canceled -->
    <!-- Classificator: observation-status -->
    <status value="final"/>

    <!-- 1..1 -->
    <!-- Logikoje nenaudojamas, nurodoma pagal nutylėjimą "ok" / Not used field, so "ok" by default -->
    <reliability value="ok"/>

    <!-- 0..1 -->
    <!-- Neįgalumo pažymėjimo Nr. / Certificate of disability Number -->
    <identifier>
        <system value="http://esveikata.lt/Identifier/DisabilityCertificateNumber"/>
        <value value="123456789"/>
    </identifier>

    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kurio negalios būklė vertinama, resursą / Patient who disability observation is being made -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>

    <!-- 1..1 -->
    <!-- Sveikatos priežiūros įstaiga, kuri atliko paciento negalios būklės vertinimą / HCP who made disability observation -->
    <performer>
        <reference value="Organization/111112222"/>
    </performer>
</Observation>
