<?xml version="1.0" encoding="UTF-8"?>
<!-- Asmens tapatybės dokumentas / Identity document -->
<DocumentReference xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/documentreference.xsd">
    
    <!-- 0..1 -->
    <!-- Asmens tapatybę patvirtinantį dokumentą išdavusios šalies triraidis kodas / The Identity document issuing country code -->
	<!-- Classificator: country -->
    <extension url="http://esveikata.lt/Profile/ltnhr-patient#documentCountry">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Country"/>
                <code value="GER"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 0..1 -->
    <!-- Asmens tapatybę patvirtinančio dokumento serija ir numeris / The identity document series and number -->   
    <masterIdentifier>
        <system value="http://esveikata.lt/classifiers/IdentityDocument/SerieNumber"/>
        <value value="ABC123456"/>
    </masterIdentifier>
    
    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kuriam priklauso dokumentas, resursą / The owner of identity document -->
    <subject>
        <reference value="Patient/1000017309/_history/1000018372"/>
    </subject>
    
    <!-- 1..1 -->
    <!-- Asmens tapatybę patvirtinančio dokumento rūšis / The identity document type -->
	<!-- Classificator: identity-document-type -->
    <type>
        <coding>
            <system value="http://esveikata.lt/classifiers/IdentityDocument/Type"/>
            <code value="1"/>
            <display value="Passport"/>
        </coding>
    </type>
    
    <!-- 1..1 -->
    <!-- Dokumentą užregistravęs specialistas /The practitioner registered insurance document /  -->
    <author>
        <reference value="Practitioner/1000015885/_history/1000016940"/>
    </author>
    
    <!-- 1..1 -->
    <!-- Data, kada buvo sukurta ši nuoroda / When this reference was created -->
    <indexed value="2013-12-24T09:43:41+03:00"/>
    
    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- Nuorodos būsena / The status of this document reference -->
    <!-- Values: "current" (by default) -->
	<!-- Classificator: document-reference-status -->
    <status value="current"/>
    
    <!-- 1..1 -->
    <!-- The mime type of the source document -->
    <!-- Values: "text/plain" (by default) -->
    <mimeType value="text/plain"/>
    
</DocumentReference>