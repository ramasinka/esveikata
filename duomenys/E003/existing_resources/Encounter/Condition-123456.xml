<?xml version="1.0" encoding="UTF-8"?>
<!-- 1..1 -->
<!-- Diagnozė / Diagnosis -->
<!-- data-element-624 -->
<Condition xmlns="http://hl7.org/fhir">

    <!-- 1..1 -->
    <!-- Diagnozės tipas / Condition type -->
	<!-- Classificator: condition-disease-type -->
    <extension url="http://esveikata.lt/Profile/ltnhr-condition#diseaseType">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Condition/DiseaseType"/>
                <code value="1"/>
                <!-- Values: "+" : Ūminės ir pirmą kartą gyvenime nustatytos lėtinės ligos | "-" :  Lėtinės pirmą kartą šiais metais nustatytos ligos | "0" : Kitos ligos, pakartotinai diagnozuojamos šiais metais -->
                <display value="+"/>  
            </coding>
            <text value="Ūminės ir pirmą kartą gyvenime nustatytos lėtinės ligos"/>
        </valueCodeableConcept>
    </extension>

    <!-- 1..1 -->
    <!-- Nuoroda į pacientą, kuriam buvo nustatyta ši diagnozė / Patient who the condition record is associated with -->
    <subject>
        <reference value="Patient/123456789"/>
    </subject>

    <!-- 1..1 -->
    <!-- Atvykimo duomenis, kai buvo nustatyta diagnozė / Encounter during which the condition was asserted -->
    <encounter>
        <reference value="Encounter/1234/_history/1"/>
    </encounter>

    <!-- 1..1 -->
    <!-- Ligos diagnozės data / Onset date -->
    <!-- data-element-1730 -->
    <dateAsserted value="2013-04-02"/>

    <!-- 1..1 -->
    <!-- Diagnozės kodas ir pavadinimas / Diagnosis code -->
    <!-- data-element-1932 -->
    <code>
        <!-- 1..1 -->
        <!-- 2.2.12 Siuntimo diagnozės TLK-10-AM kodas / Order diagnosis code-->
		<!-- Classificator: tlk-10-am -->
        <coding>
            <system value="http://esveikata.lt/classifiers/TLK-10-AM"/>
            <code value="T21.0"/>
            <display value="Burn of unspecified degree of trunk"/>
        </coding>
    </code>

    <!-- 1..1 -->
    <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory -->
    <!-- Diagnozės būsena / The clinical status of the condition -->
    <!-- Values: confirmed (by default) -->
	<!-- Classificator: condition-status -->
    <status value="confirmed"/>

    <!-- 0..1 -->
    <!-- Aprašymas / Description -->
    <!-- data-element-1710 -->
    <notes value="Condition details or description"/>
</Condition>
