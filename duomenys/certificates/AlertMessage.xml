<?xml version="1.0" encoding="UTF-8"?>
<Alert xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/alert.xsd">

    <!-- 0..1 -->
    <!-- Specialistas, kuriam yra skirtas pranešimas. / Alert receiver (Practitioner) -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#alertReceiver">
        <valueResource>
            <reference value="Practitioner/987654321/_history/1"/>
        </valueResource>
    </extension>

    <!-- 0..* -->
    <!-- Pranešimo kontekstas/ Alert context -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#context">
        <valueResource>
            <reference value="Order/123/_history/1"/>
        </valueResource>
    </extension>

    <category>
        <!-- 1..1 -->
        <!-- Pranešimo kategorija / Alert category -->
        <!-- Classificator: alert-category -->
        <coding>
            <system value="http://esveikata.lt/classifiers/Alert/Category"/>
            <code value="3"/>
            <!-- 1..1 -->
            <!-- Pranešimo tipo aprašymas / Alert type description -->
            <display value="pranešimas specialistui"/>
        </coding>
    </category>

    <!-- 1..1 -->
    <!-- Pranešimo būsena / Alert status -->
    <!-- active | inactive | entered in error -->
	<!-- Classificator: alert-status -->
    <status value="active"/>

    <!-- 1..1 -->
    <!-- Informacija apie pacientą, apie kurį yra siunčiamas pranešims / Information about patient who is a context of this alert -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>

    <!-- 1..1 -->
    <!-- Specialistas sukūręs pranešimą / Health care specialist who has created Alert -->
    <author>
        <reference value="Practitioner/123/_history/1"/>
    </author>

    <!-- 1..1 -->
    <!-- Papildomas aprašymas / Additional description -->
    <note value="Alert textual information."/>
</Alert>
