<?xml version="1.0" encoding="UTF-8"?>
<!-- Nuoroda į medicinę pažymą  -->
<DocumentReference xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/documentreference.xsd">

    <!-- 1..1 -->
    <!-- Dokumento antraštės identifikatorius "Composition" integraciniame taške / Doc identifier in "Composition" endpoint -->
    <masterIdentifier>
        <system value="Composition"/>
        <value value="1000014555"/>
    </masterIdentifier>
    
    <!-- Dokumento antraštės identifikatorius "Composition" (su versija) integraciniame taške / version specific Doc identifier in "Composition" endpoint -->
    <identifier>
        <system value="Composition/_history"/>
        <value value="1000014555/_history/1000018293"/>
    </identifier>
    
    <!-- Pažymos numeris (sugeneruojamas automatiškai ESBPI pusėje) / Certificate number (generated on ESPBI site) -->
    <identifier>
        <system value="http://esveikata.lt/Identifier/DocumentNumber"/>
        <value value="14-000025"/>
    </identifier>
    
    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kuriam pateikiamas dokumentas, resursą / Patient of document -->
    <subject>
        <reference value="Patient/123456/_history/1"/>
    </subject>
   
    <!-- 1..1 -->
    <!-- Dokumento tipas / CodeableConcept Kind of composition. What type of document is this - eg Discharge Summary, referral, Consultation note -->
    <!-- Classificator: doc-code -->
    <type>
        <coding>
            <!-- 1..1 -->
            <!-- Dokumento tipas / Document type -->
            <!-- Classificator: doc-code -->
            <system value="http://snomed.info/sct"/>
            <code value="275674000"/>
        </coding>
        
        <!-- 1..1 -->
        <!-- Dokumento pavadinimas / Document title -->
        <text value="E047 Privalomo sveikatos patikrinimo medicininė pažyma (Gydytojo pildoma dalis)"/>
    </type>
    
    <!-- 1..1 -->
    <!-- Informacija apie dokumentą pateikusį specialistą / Info about specialist who has created this document -->
    <author>
        <reference value="Practitioner/12346/_history/1"/>
    </author>
    
    <!-- 1..1 -->
    <!-- Informacija apie dokumentą pateikusią SPĮ / Info about HIS who has created this document-->
    <custodian>
        <reference value="Organization/12346/_history/1"/>
    </custodian>

    <!-- 1..1 -->
    <!-- Dokumento sukūrimo data / Document creation date -->
    <created value="2014-12-24T09:43:41+11:00"/>

    <!-- 1..1 -->
    <!-- Data, kada buvo sukurta ši nuoroda / When this reference was created -->
    <indexed value="2014-12-24T09:43:41+11:00"/>

    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- Nuorodos būsena / The status of this document reference -->
    <!-- Values: "current" (by default) -->
    <status value="current"/>

    <!-- 1..1 -->
    <!-- Medicininio dokumento būsena iš kompozicijos būsenų + "signed" pasirašytam dokumentui / Medical document state derived from Composition states + signed status for signed docs -->
    <docStatus>
        <coding>
            <system value="http://esveikata.lt/classifiers/Document/Status"/>
            <code value="signed"/>
        </coding>
    </docStatus>

    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- The mime type of the source document -->
    <!-- Values: "text/plain" (by default) -->
    <mimeType value="text/xml"/>
</DocumentReference>