<?xml version="1.0" encoding="UTF-8"?>
<Specimen xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/specimen.xsd">
    
    <!-- 0..* -->
    <!-- 7.2.2.2. Ėminio registracijos kodas / Specimen code-->
    <!-- data-element-1222 -->
    <identifier>
        <system value="http://esveikata.lt/classifiers/Specimen/RegistrationCode"/>
        <value value="123456789"/>
    </identifier>
    
    <!-- 0..* -->
    <!-- 7.2.2.1. Ėminys / Speciment-->
    <!-- data-element-1221 -->
    <type>
        <coding>
            <!-- 1..1 -->
            <!-- Tiriamos medžiagos tipas / Kind of material that forms the specimen -->
            <!-- Classificator: -->
            
            <system value="http://esveikata.lt/classifiers/Specimen/Type"/>
            <code value="123456"/>
            
            <!-- 1..1 -->
            <display value="Venous blood specimen"/>
        </coding>
        
        <!-- 0..1 --> <!-- Privalomas, jei „Ėminys“ nurodyta „Kita“ / Mandatory, if spacemen value is "Other" -->
        <!-- Ėminio patikslinimas  / Sceciment description -->
        
        <text value="Left hand blood"/>
    </type>
    
    
    <!-- 1..1 -->
    <!-- Nuoroda į pacientą, kuriam tiriamas ėminys / Reference to the patient whose specimen data -->
    
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>
    
    <collection>
        <!-- 0..1 -->
        <!-- 9.3.8. Operacijos/procedūros pobūdis / Surgery/procedure type -->
        <comment value="Surgery/procedure type"/>
        
        <!-- 0..1 -->
        <!-- 9.3.2. Medžiagos paėmimo data / Date and time when specimen was taken -->
        <!-- data-element-1520 -->
        
        <collectedDateTime value="2011-05-30T06:15:00"/>
        
        <!-- 0..1 -->
        <!-- 9.3.7 Siunčiamo preparato paėmimo pobūdis / Method of getting the sample -->
        <!-- data-element-1570 -->
        
        <method>
            <coding>
                <system value="http://esveikata.lt/classifiers/Specimen/CollectionMethod"/>
                <code value="132"/>
            </coding>
        </method>
    </collection>
    
    <container>
        <!-- 0..1 -->
        <!-- 9.3.3. Audinį fiksuojanti medžiaga / Sample fixating substance -->
        <!-- data-element-1530 -->
        <extension url="http://esveikata.lt/Profile/ltnhr-specimen#fixatingSubstance">
            <valueCodeableConcept>
                <!-- 1..1 -->
                <!-- Classificator: -->
                <coding>
                    <system value="http://esveikata.lt/classifiers/Specimen/FixatingSubstance"/>
                    <code value="1"/>
                    <display value="10% buferinis formalinas"/>
                </coding>
                
                <!-- 0..1 -->
                <!-- Audinį fiksuojančios medžiagos pastabos / Sample fixating substance comments -->
                <text value="Audinį fiksuojančios medžiagos pastabos"/>
            </valueCodeableConcept>
        </extension>
        
        <!-- 0..1 -->
        <!-- 7.2.3.	Ėminio laikymo, gabenimo informacija / Specimen holding/transportation details -->
        <!-- data-element-1223 -->
        <extension url="http://esveikata.lt/Profile/ltnhr-specimen#storageTransportationDetails">
            <valueCodeableConcept>
                <coding>
                    
                    <!-- 1..1 -->
                    <!-- Ėminio laikymo, gabenimo informacija / Specimen holding/transportation details -->
                    <!-- Values: "1" : Kambario temperatūroje/At room temperature | "2" : Šaldytuve/Refrigerator | "3" : Kita/Other -->
                    <!-- Classificator: -->
                    <system value="http://esveikata.lt/classifiers/Specimen/StorageTransportationDetails" />
                    <code value="3" />
                    
                    <!-- 0..1 -->
                    <display value="Kita" />
                </coding>
                
                <!--0..1 --> <!-- Privalomas, jei „Ėminio laikymo, gabenimo informacija“ nurodyta „Kita“ / Mandatory, if "Specimen holding/transportation details" value "Other" (code "3") -->
                <!-- 7.2.3.3. Kita / Other -->
                <text value="+1 laipsnis temperaturoje"/>
            </valueCodeableConcept>
        </extension>
    </container>
</Specimen>