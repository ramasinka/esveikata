<?xml version="1.0" encoding="UTF-8"?>
<!-- 1..* -->
<!-- Diagnozė iš E025 dokumento / Diagnosis -->
<!-- data-element-624 -->
<Condition xmlns="http://hl7.org/fhir">
    <extension url="http://esveikata.lt/Profile/ltnhr-condition#diseaseType">
        
        <!-- 1..1 -->
        <!-- Diagnozės tipas / Condition type -->
        <!-- Classificator: condition-disease-type -->
        <!-- Values: " +" :  Ūminės ir pirmą kartą gyvenime nustatytos lėtinės ligos | "-" :  Lėtinės pirmą kartą šiais metais nustatytos ligos | "0" : Kitos ligos, pakartotinai diagnozuojamos šiais metais -->
        <valueCoding>
            <system value="http://esveikata.lt/classifiers/Condition/DiseaseType"/>
            <code value="1"/>
            <display value="+"/>
        </valueCoding>
    </extension>
    
    <!-- 1..1 -->
    <!-- 1.3 Nuoroda į pacientą, kuriam buvo nustatyta ši diagnozė / Patient who the condition record is associated with -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>
    
    <!-- 1..1 -->
    <!-- Atvykimo duomenis, kai buvo nustatyta diagnozė / Encounter during which the condition was asserted -->
    <encounter>
        <reference value="Encounter/38765/_history/1"/>
    </encounter>
    
    <!-- 1..1 -->
    <!-- Ligos diagnozės data / Onset date -->
    <!-- data-element-1730 -->
    <dateAsserted value="2013-04-02"/>
    
    <!-- 1..1 -->
    <!-- 9.2.1.1 Diagnozės kodas (TLK-10-AM kodas) / Diagnosis code -->
    <!-- data-element-1932 -->
    <code>
        <coding>
            <!-- 1..1 -->
            <!-- Siuntimo diagnozės kodas (TLK-10-AM kodas) / Order diagnosis code -->
			<!-- Classificator: tlk-10-am -->
            <system value="http://esveikata.lt/classifiers/TLK-10-AM"/>
            <code value="T21.0"/>
            <!-- 0..1 -->
            <display value="Burn of unspecified degree of trunk"/>
        </coding>
        
        <!-- 1..1 -->
        <!-- 9.2.1.2 Siuntimo diagnozė pavadinimas / Order diagnosis description -->
        <text value="Burn of unspecified degree of trunk"/>
    </code>
    
    <!-- 1..1 --> <!-- Nenaudojamas laukas, tačiau privalomas / Not used, but mandatory --> 
    <!-- Diagnozės būsena / The clinical status of the condition -->
    <!-- Values: "confirmed" (pagal nutylėjimą / by default) -->
	<!-- Classificator: condition-status -->
    <status value="confirmed"/>
    
    <!-- 0..1 -->
    <!-- 9.2.1.3 Aprašymas / Description -->
    <!-- data-element-1710 -->
    <notes value="Condition details or description"/>
</Condition>
