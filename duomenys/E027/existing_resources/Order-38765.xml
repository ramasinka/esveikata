<?xml version="1.0" encoding="UTF-8"?>
<!-- 1..1 -->
<!-- Siuntimo duomenys / Order data -->
<Order xmlns="http://hl7.org/fhir">

    <!-- 1..1 -->
    <!-- Skyrimo tipas / Order type -->
    <!-- Classificator: order-type -->
    <extension url="http://esveikata.lt/Profile/ltnhr-order#type">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/OrderType"/>
                <!-- Values: "1" : Siuntimo konsultuoti, gydyti skyrimas | "2" : Laboratorinio tyrimo skyrimas | "3" : Patologijos tyrimo skyrimas | "4" : Skiepų skyrimas -->
                <code value="1"/>
                <display value="Siuntimo konsultuoti, gydyti skyrimas"/>
            </coding>
        </valueCodeableConcept>
    </extension>

    <!-- 0..1 -->
    <!-- Sveikatos priežiūros specialisto, sukūrusio siuntimą, profesinė kvalifikacija ir spaudo informacija / Health Care Specialist‘s who made this order Qualification -->
    <!-- Classificator: qualification-code -->
	<extension url="http://esveikata.lt/Profile/ltnhr-order#sourceQualification">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/QualificationCode"/>
                <code value="221227"/>
                <display value="Gydytojas neurologas"/>
            </coding>
        </valueCodeableConcept>
    </extension>

    <!-- 1..1 -->
    <!-- 4.2.2 Specialisto, kuriam siunčiamas pacientas, prof. kvalifikacija arba skyriaus specializacija / Target specialist Qualification or target department Specialization -->
    <!-- data-element-325 -->
    
    <extension url="http://esveikata.lt/Profile/ltnhr-order#targetQualification">
        <valueCodeableConcept>

            <!-- 1..1 -->
            <!-- Specialisto prof. kvalifikacijos kodas / Target specialist prof qualification code -->
            <!-- Classificator: qualification-code -->
            <coding>
                <system value="http://esveikata.lt/classifiers/QualificationCode"/>
                <code value="221227"/>
                <display value="Gydytojas neurologas"/>
            </coding>

            <!-- 0..1 -->
            <!-- Skyriaus specializacija (jeigu nenurodyta prof. kvalifikacija) / Department specialization (in case prof qualification is missing) -->
            <text value="Neurologijos skyrius"/>
        </valueCodeableConcept>
    </extension>

    <!-- 1..1 -->
    <!-- 4.2.1 Siuntimo data / Order issue date -->
    <!-- data-element-1910 -->
    
    <date value="2014-02-21T09:03:04+11:00"/>

    <!-- 1..1 -->
    <!-- Pacientas, kuriam sukurtas siuntimas / Patient who has been ordered -->
    <!-- data-element-1 -->
    
    <subject>
        <reference value="Patient/123456789/_history/1"/>
    </subject>

    <!-- 1..1 -->
    <!-- Nuoroda į sveikatos priežiūros specialisto, kuris sukūrė siuntimą, resursą / Health care specialist who made this order -->
    <!-- data-element-20 -->
    
    <source>
        <reference value="Practitioner/987654321/_history/1"/>
    </source>

    <!-- 0..1 -->
    <!-- Siuntimo diagnozių sąrašas / List of Referral Diagnosis -->
    <!-- data-element-330 -->
    
    <reasonResource>
        <reference value="List/423/_history/1"/>
    </reasonResource>
    
    <!-- 1..1 -->
    <!-- Atvykimo duomenys, kurių pagrindu buvo sukurtas šis skyrimo resursas / Encounter where this Order was created at -->
    <detail>
        <reference value="Encounter/1000017570/_history/1000018634"/>
    </detail>

    <!-- 1..1 -->
    <!-- 4.2.5 Papildomas aprašymas specialistui / Additional details for the specialist -->
    <detail>
        <reference value="DiagnosticOrder/12345689/_history/1"/>
    </detail>
</Order>
