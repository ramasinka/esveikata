<?xml version="1.0" encoding="UTF-8"?>

<!-- Vaisto pakuotės duomenys / Medication package data -->
<Medication xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/medication.xsd">
 
    <!-- 1..1 -->
    <!-- Preparato tipas / Type to medication 
    Posible values:
    1 - Vaistinis preparatas (jeigu tai yra gaunama iš VAPRIS)
    2 - MPP (jeigu tai yra iš iDrug gaunama preparatas)
    -->
    <!-- Classificator: medication-type -->
    <extension url="http://esveikata.lt/Profile/ltnhr-medication#medicationType">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Medication/MedicationType"/>
                <code value="1"/>
                <display value="Vaistinis preparatas"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 1..1 -->
    <!-- Preparato (sugalvotas) pavadinimas / Medication name -->
    <name value="Duosol K 4"/>
 
    <!-- 0..1 -->
    <!-- NPAKID-7  / NPAKID  -->
    <code>
        <!-- 0..* -->
        <coding>
            <system value="http://esveikata.lt/Identifier/Medication/NPAKID-7"/>
            <code value="1020497"/>
        </coding>
        <coding>
            <system value="http://esveikata.lt/Identifier/Medication/NPAKID"/>
            <code value="20497"/>
        </coding>
    </code>
 
    <!-- Medication resurso tipas (vaistas : "product", pakuotė : "package") / Medication kind (drug : "product", drug package : "package") -->
    <kind value="package"/>
    
    <!-- 0..1 -->
    <!-- Pakuotė / Package -->
    <package>
        <!-- 0..* -->
        <!-- Priskirta liga / Disease assigned to medication -->
        <!-- Classificator: tlk-10-am -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#assignedDisease">
            <valueCodeableConcept>
                <coding>
                    <system value="http://esveikata.lt/classifiers/TLK-10-AM"/>
                    <code value="1101"/>
                    <!-- Diagnozės pavadinimas -->
                    <display value="APENDICITAS"/>
                </coding>
            </valueCodeableConcept>
        </extension>

        <!-- 0..1 -->
        <!-- Pakuotės aprašymas / package description  -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#description">
            <valueString value="5000 ml (dviejų kamerų maišeliai 4445 ml + 555 ml) N2"/>
        </extension>

        <!-- 0..1 -->
        <!-- Rinkodaros teisės (registracijos) pažymėjimo numeris / Registration certificate number -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#registrationNumber">
            <valueIdentifier>
                <system value="http://esveikata.lt/classifiers/Identifier/PackageRegistrationNumber"/>
                <value value="LT/1/05/0322/003"/>
            </valueIdentifier>
        </extension>

        <!-- 0..* -->
        <!-- Vaistinio preparato ar MPP kompensavimas /  Medication compensation data -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation">
            
            <!-- 0..* -->
            <!-- Vaistinio preparato ar MPP kompensavimo rūšis / Compensation type -->
			<!-- Classificator: compensation-type -->
            <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation.compensationCode">
                <valueCodeableConcept>
                    <coding>
                        <system value="http://esveikata.lt/classifiers/Medication/CompensationCode"/>
                        <code value="1"/> 
                        <display value="Vaikui"/>
                    </coding>
                </valueCodeableConcept>
            </extension>
            
            <!-- 0..1 -->
            <!-- Vaistinio preparato ar MPP kompensavimo periodas / Compensation period -->
            <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation.compensationPeriod">
                <valuePeriod>
                    <start value="2012-12-01"/>
                    <end value="3000-01-01"/>
                </valuePeriod>
            </extension>
            
            <!-- 0..1 -->
            <!-- Vaistinio preparato ar MPP kompensavimo procentas / Compensation percentage -->
            <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation.percentage">
                <valueInteger value="80"/>
            </extension>
            
            <!-- 0..1 -->
            <!-- Vaistinio preparato ar MPP priemoka  / Surcharge -->
            <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation.surcharge">
                <valueQuantity>
                    <value value="5.15"/>
                    <units value="LTL"/>
                    <system value="urn:std:iso:4217"/>
                </valueQuantity>
            </extension>
        </extension>
        
        <!-- 0..1 -->
        <!-- Bazinė kaina / Compensation cost -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation.compensationCost">
            <valueQuantity>
                <value value="5.15"/>
                <units value="LTL"/>
                <system value="urn:std:iso:4217"/>
            </valueQuantity>
        </extension>
        
        <!-- 0..1 -->
        <!-- Mažmeninė kaina / Retail price -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#compensation.retailPrice">
            <valueQuantity>
                <value value="15.55"/>
                <units value="LTL"/>
                <system value="urn:std:iso:4217"/>
            </valueQuantity>
        </extension>
        
        <!-- 1..1 -->
        <!-- Preparato pakuotės galiojimo būsena / Medication package status -->
		<!-- Classificator: medication-package-status -->
        <extension url="http://esveikata.lt/Profile/ltnhr-medication#medicationStatus">
            <valueCodeableConcept>
                <coding>
                    <system value="http://esveikata.lt/classifiers/Medication/packageStatus"/>
                    <code value="1"/>
                    <display value="Registruotas"/>
                </coding>
            </valueCodeableConcept>
        </extension>

        <!-- 0..1 -->
        <!-- Pakuotės tipas / Package type -->
		<!-- Classificator: medication-package-type -->
        <container>
            <coding>
                <system value="http://esveikata.lt/classifiers/Medication/PackageType"/>
                <code value="1"/>
                <!-- 1..1 -->
                <!-- Pavadinimas lietuvių kalba -->
                <display value="maišelis">
                    <extension url="http://hl7.org/fhir/Profile/iso-21090#language">
                        <valueCode value="lt:LT"/>
                    </extension>
                    
                    <!-- 0..1 -->
                    <!-- Pavadinimas anglų kalba / Name in english -->
                    <extension url="http://hl7.org/fhir/Profile/iso-21090#string-translation">
                        <valueString value="packet">
                            <extension url="http://hl7.org/fhir/Profile/iso-21090#language">
                                <valueCode value="en:EN"/>
                            </extension>
                        </valueString>
                    </extension>
                </display>
            </coding>
        </container>

        <!-- 0..1 -->
        <!-- Pakuotėje esantis vaistas / Package contained medication -->
        <content>
            <item>
                <reference value="Medication/1234565879"/>
            </item>
        </content>
    </package>
</Medication>
