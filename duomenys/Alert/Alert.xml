<?xml version="1.0" encoding="UTF-8"?>
<!-- Bendrinis Alert resurso pavyzdys / Alert resource sample -->
<Alert xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/alert.xsd">

    <!-- 0..1 -->
    <!-- Komentaro pavadinimas - privalomas jeigu Alert'o category yra "4" : komentaras / Comment title, mandatory in case Alert category is "4" : komentaras -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#title">
        <valueString value="Alert title if needed."/>
    </extension>

    <!-- 0..1 -->
    <!-- Nuoroda į susijusį pranešimą. Privalomas jeigu pranešimo autorius (author) yra pacientas. / Reference to replaying aler. Mandatory if alert author is patient. -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#parentAlert">
        <valueResource>
            <reference value="Alert/123456/_history/1"/>
        </valueResource>
    </extension>

    <!-- 0..1 -->
    <!-- Pranešimo, siunčiamo į išorinę sistemą, adresatas / External alert received -->
    <!-- Classificator:  alert-external-alert-receiver-->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#externalAlertReceiver">
        <valueCodeableConcept>
            <!-- 1..1 -->
            <!-- Classificator:  -->
            <coding>
                <system value="http://esveikata.lt/classifiers/Alert/ExternalAlertReceiver"/>
                <code value="1"/>
                <!-- 1..1 -->
                <!-- Adresato aprašymas / Alert received description -->
                <display value="Lietuvos kelių policijos tarnybai"/>
            </coding>
        </valueCodeableConcept>
    </extension>

    <!-- 0..1 -->
    <!-- Specialistas, kuriam yra skirtas pranešimas. Privalomas jeigu Alert cateogory yra "3" : pranešimas specialistui. / Alert receiver (Practitioner). Mandatory if Alert category is "3" : pranešimas specialistui -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#alertReceiver">
        <valueResource>
            <reference value="Patient/32856257683256/_history/1"/>
        </valueResource>
    </extension>

    <!-- 0..1 -->
    <!-- Draudimo naudotis ginklu ar vairuoti pranešimo tipas. Privalomas jeigu Alert category yra "1" : pranešimas policijai / Police alert type, mandatory if Alert category is "1" : pranešimas policijai-->
    <!-- Classificator:  -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#prohibitAlertType">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/Alert/ProhibitAlertType"/>
                <!-- Values:  "1" : dėl negalėjimo vairuoti | "2" : dėl negalėjimo naudoti ginklą" -->
                <code value="1"/>
                <!-- 1..1 -->
                <!-- Pranešimo tipo aprašymas / Alert type description -->
                <display value="negali vairuoti"/>
            </coding>
        </valueCodeableConcept>
    </extension>

    <!-- 0..1 -->
    <!-- Paciento ar specialisto komentaras pranešimo tipas. Privalomas jeigu Alert category "4" : komentaras. Patient or specialist comment alert type. Mandatory if Alert category is "4" : komentaras -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#commentAlertType">
        <valueCodeableConcept>
            <!-- 1..1 -->
            <!-- Komentaro pranešimo tipas / Comment alert type -->
            <!-- Classificator:  -->
            <coding>
                <system value="http://esveikata.lt/classifiers/Alert/CommentAlertType"/>
                <!-- Values:  "1" : paciento komentaras: | "2" : specialisto komentaras | "3" : bendras -->
                <code value="1"/>
                <!-- 1..1 -->
                <!-- Pranešimo tipo aprašymas / Alert type description -->
                <display value="paciento komentaras"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 0..1 -->
    <!-- Komentaro pranešimo sukūrimo data ir laikas / Creation date and time of Comment kind alert-->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#created">
        <valueDateTime value="2014-02-01T09:12:40.031+02:00"/>
    </extension>

    <!-- 0..1 -->
    <!-- Komentaro pranešimo galiojimo pradžios ir pabaigos datos / Start and end dates of Comment kind alert-->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#appliesPeriod">
        <valuePeriod>
            <start value="2014-02-01T09:12:40.031+02:00"/>
            <end value="2014-02-12T09:12:40.031+02:00"/>
        </valuePeriod>
    </extension>

    <!-- 0..* -->
    <!-- Komentuojamas resursas / Commented resource -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#context">
        <valueResource>
            <reference value="DocumentReference/321/_history/1"/>
        </valueResource>
    </extension>

    <category>
        <!-- 1..1 -->
        <!-- Pranešimo kategorija / Alert category -->
        <!-- Classificator:  -->
        <coding>
            <system value="http://esveikata.lt/classifiers/Alert/Category"/>
            <!-- Values:  "1" : draudžiamas pranešimas  | "2" : paciento pageidavimas | "3" : pranešimas specialistui | "4" : komentaras | "5" : pranešimas pacientui -->
            <code value="1"/>
            <!-- 1..1 -->
            <!-- Pranešimo tipo aprašymas / Alert type description -->
            <display value="draudžiamas pranešimas"/>
        </coding>
    </category>

    <!-- 1..1 -->
    <!-- Pranešimo būsena / Alert status -->
    <!-- active | inactive | entered in error -->
    <status value="active"/>

    <!-- 1..1 -->
    <!-- Informacija apie pacientą, kuriam pateikiamas dokumentas / Information about patient -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>

    <!-- 1..1 -->
    <!-- Specialistas sukūręs pranešimą / Health care specialist who has created Alert -->
    <author>
        <reference value="Practitioner/123/_history/1"/>
    </author>

    <!-- 1..1 -->
    <!-- Papildomas aprašymas / Additional description -->
    <note value="Alert textual information."/>
</Alert>
