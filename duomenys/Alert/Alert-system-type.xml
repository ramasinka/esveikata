<?xml version="1.0" encoding="UTF-8"?>
<!-- Sisteminis Pranešimas pacientui apie planuojamo skiepo datą/ System Alert message to Patient of comming planned immunization date -->
<Alert xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/alert.xsd">
    <!-- 1..1 -->
    <!-- Pranešimo pavadinimas / Alert title -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#title">
        <valueString value="Planuojami skiepai"/>
    </extension>
    
    <!-- 1..1 -->
    <!-- Pranešimo, siunčiamo į išorinę sistemą, adresatas / External alert received -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#externalAlertReceiver">
        <valueCodeableConcept>
            <!-- 1..1 -->
            <!-- Classificator: alert-external-alert-receiver -->
            <coding>
                <system value="http://esveikata.lt/classifiers/Alert/ExternalAlertReceiver"/>
                <code value="5"/>
                <display value="Pacientas"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 1..1 -->
    <!-- sisteminio pranešimo tipas -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#systemAlertType">
        <valueCodeableConcept>
            <!-- 1..1 -->
            <!-- Classificator: system-alert-type -->
            <coding>
                <system value="http://esveikata.lt/classifiers/Alert/SystemAlertType"/>
                <code value="2"/>
                <display value="Pranešimas/priminimas apie skiepus siunčiamas suėjus skiepų kalendoriuje numatytai datai."/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <category>
        <!-- 1..1 -->
        <!-- Pranešimo kategorija / Alert category -->
        <!-- Classificator: alert-category -->
        <coding>
            <system value="http://esveikata.lt/classifiers/Alert/Category"/>
            <code value="6"/>
            <display value="sistemiiai pranešimai"/>
        </coding>
    </category>

    <!-- 1..1 -->
    <!-- Pranešimo būsena / Alert status -->
    <!-- active | inactive | entered in error -->
    <status value="active"/>

    <!-- 1..1 -->
    <!-- Informacija apie pacientą, kuriam pateikiamas dokumentas / Information about patient -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>

    <!-- 1..1 -->
    <!-- Papildomas aprašymas / Additional description -->
    <note value="Informuojame apie artėjantį planuojamą skiepą.
        Skiepijimo data: 2015-02-16
        Užkrečiamos ligos, nuo kurių skiepijama: erkinis encifalitas"/>
</Alert>
