<?xml version="1.0" encoding="UTF-8"?>
<!-- Pranešimas specialistui nuo paciento / Alert message to Practitioner from Patient -->
<Alert xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/alert.xsd">
    <!-- 0..1 -->
    <!-- Pranešimo pavadinimas / Alert title -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#title">
        <valueString value="Alert title if needed."/>
    </extension>
    
    <!-- 0..1 -->
    <!-- Nuoroda į susijusį pranešimą. Privalomas jeigu pranešimo autorius (author) yra pacientas / Reference to replaying aler. Mandatory if alert author is patient. -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#parentAlert">
        <valueResource>
            <reference value="Alert/123456"/>
        </valueResource>
    </extension>

    <!-- 0..1 -->
    <!-- Specialistas, kuriam yra skirtas pranešimas. Privalomas jeigu Alert cateogory yra "3" : pranešimas specialistui. / Alert receiver (Practitioner). Mandatory if Alert category is "3" : pranešimas specialistui -->
    <extension url="http://esveikata.lt/Profile/ltnhr-alert#alertReceiver">
        <valueResource>
            <reference value="Practitioner/123257683256/_history/1"/>
        </valueResource>
    </extension>

    <category>
        <!-- 1..1 -->
        <!-- Pranešimo kategorija / Alert category -->
        <!-- Classificator:  -->
        <coding>
            <system value="http://esveikata.lt/classifiers/Alert/Category"/>
            <!-- Values:  "1" : draudžiamas pranešimas  | "2" : paciento pageidavimas | "3" : pranešimas specialistui | "4" : komentaras | "5" : pranešimas pacientui -->
            <code value="3"/>
            <!-- 1..1 -->
            <!-- Pranešimo tipo aprašymas / Alert type description -->
            <display value="pranešimas specialistui"/>
        </coding>
    </category>

    <!-- 1..1 -->
    <!-- Pranešimo būsena / Alert status -->
    <!-- active | inactive | entered in error -->
    <status value="active"/>

    <!-- 1..1 -->
    <!-- Informacija apie pacientą, kuris yra šio pranešimo kontekstas / patient who is the context of alert message -->
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>

    <!-- 1..1 -->
    <!-- Asmuo (Practitioner|Patient) sukūręs pranešimą / Health care specialist or patient who has created this Alert -->
    <author>
        <reference value="Patient/32856257683256/_history/2"/>
    </author>

    <!-- 1..1 -->
    <!-- Papildomas aprašymas / Additional description -->
    <note value="Alert textual information."/>
</Alert>
