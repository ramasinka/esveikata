<?xml version="1.0" encoding="UTF-8"?>
<!-- Rekomenduojamo skiepo aprašymas / Immunization recommendation description -->
<ImmunizationRecommendation xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.w3.org/2005/Atom http://www.hl7.org/implement/standards/fhir/immunizationrecommendation.xsd">

    <!-- 1..1 -->
    <!-- Planuojamo skiepo duomenų autorius / practitioner, who has submitted this recommendation -->
    <extension url="http://esveikata.lt/Profile/ltnhr-immunizationrecommendation#author">
        <valueResource>
            <reference value="Practitioner/123456879/_history/1"/>
        </valueResource>
    </extension>

    <!-- 1..1 -->
    <!-- Užkrečiamųjų ligų, nuo kurių skiepijama, pavadinimai / Vaccine-preventable disease name -->
    <!-- Classificator: infectious-disease -->
    <!-- data-element-1010 -->
    <extension url="http://esveikata.lt/Profile/ltnhr-immunizationrecommendation#preventableDiseaseName">
        <valueCodeableConcept>
            <!-- 1..1 -->
            <coding>
                <system value="http://esveikata.lt/classifiers/infectious-disease"/>
                <code value="A37"/>
                <display value="Kokliušas"/>
            </coding>
        </valueCodeableConcept>
    </extension>

    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kuris skiepijamas, resursą / Reference to patient, for who is given vaccine, resource -->
    <!-- Data validation DTT.6. -->
    <subject>
        <reference value="Patient/123456789/_history/1"/>
    </subject>

    <recommendation>
        <!-- 1..1 -->
        <!-- Rekomendacijos sukūrimo data / Recommendation creation date -->
        <date value="2014-10-30T08:40:40.031+02:00"/>

        <!-- Nurodomas vakcinos pavadinimas iš vakcinos produkto Medication.name lauko  / vaccine name from vaccine product in Medication.name field -->
        <vaccineType>
            <text value="Encepur adults"/>
        </vaccineType>

        <!-- 1..1 -->
        <!-- Dozės eilės numeris / Vaccine dose serial number -->
        
        <doseNumber value="2"/>

        <!-- 1..1 -->
        <!-- Planuojamo skiepo būseną -->
        <!-- Classificator: immunization-recommendation-status -->
        <forecastStatus>
            <coding>
                <system value="http://esveikata.lt/classifiers/immunization-recommendation-status"/>
                <!-- Values: active | entered in error -->
                <code value="active"/>
                <display value="Aktualus"/>
            </coding>
        </forecastStatus>

        <!-- 1..1 -->
        <dateCriterion>
            <!-- Vaccine date criteria status -->
            <code>
                <coding>
                    <system value="http://hl7.org/fhir/immunization-recommendation-date-criterion"/>
                    <!-- Values: due | overdue -->
                    <code value="due"/>
                </coding>
            </code>

            <!-- 1..1 -->
            <!-- Skiepijimo data / Date of recommended vaccination - -->
            <!-- data-element-1060 -->
            <value value="2014-03-25T09:12:40.031+02:00"/>
        </dateCriterion>

        <protocol>
            <!-- 0..1 -->
            <!-- Pastabos / Remarks -->
            <!-- data-element-1120 -->
            <description value="Remarks as text."/>
        </protocol>
    </recommendation>
</ImmunizationRecommendation>
