<?xml version="1.0" encoding="UTF-8"?>
<!-- 8.2.3 Tiriamasis ėminys arba tiriamoji medžiaga / Specimen data -->
<Specimen xmlns="http://hl7.org/fhir">
    
    <!-- 1..* -->
    <!-- 8.2.3.2 Ėminio registracijos kodas / Speciment code -->
    <!-- data-element-1222 -->
    <identifier>
        <system value="http://esveikata.lt/classifiers/Specimen/RegistrationCode"/>
        <value value="123456789"/>
    </identifier>
    
    <!-- 1..* -->
    <!-- 8.2.3.1 Ėminys (pasirenkamas iš SNOMED klasifikatoriaus) / Speciment-->
    <!-- data-element-1221 -->
    <type>
        <coding>
            <!-- 1..1 -->
            <!-- Tiriamos medžiagos tipas / Kind of material that forms the specimen -->
            
            <!-- Classificator: specimen-type -->
            <system value="http://snomed.info/sct"/>
            <code value="122555007"/>
            
            <!--0..1 -->
            <display value="Venous blood specimen"/>
        </coding>
        
        <!-- 0..1 --> <!-- Privalomas, jei „Ėminys“ nurodyta „Kita“ / Mandatory, if Spacement value is Other -->
        <!-- Ėminio patikslinimas  / Sceciment description -->
        <text value="Left hand blood"/>
    </type>
    
    <!-- 1..1 -->
    <!-- Nuoroda į pacientą, kuriam atliekamas tyrimas / Reference to the pacient whose speciment data -->
    
    <subject>
        <reference value="Patient/32856257683256/_history/2"/>
    </subject>
    
    <collection>
        <!-- 1..1 -->
        <!-- 8.2.3.4 Ėminio paėmimo data ir laikas / The date and time when specimen was taken -->
        <!-- data-element-1230 -->
        <collectedDateTime value="2011-05-30T06:15:00"/>
    </collection>
    
    <container>
        <!-- 1..1 -->
        <!-- 8.2.3.3 Ėminio laikymo, gabenimo informacija / Specimen holding/transportation details -->
        <!-- data-element-1223 -->
        <extension url="http://esveikata.lt/Profile/ltnhr-specimen#storageTransportationDetails">
            <valueCodeableConcept>
                
                <!-- 1..1 -->
                <!-- 8.2.3.3 Ėminio laikymo, gabenimo informacija / Specimen holding/transportation details -->
                <!-- Values: "1" : 8.2.3.3.1 Kambario temperatūroje/At room temperature | "2" : 8.2.3.3.2 Šaldytuve/Refrigerator | "3" : 8.2.3.3.3 Kita/Other -->
                <!-- Classificator: specimen-storage-trans-detail -->
                <coding>
                    <system value="http://esveikata.lt/classifiers/Specimen/StorageTransportationDetails"/>
                    <code value="3"/>
                    
                    <!-- 0..1 -->
                    <display value="Kita"/>
                </coding>
                
                <!-- 0..1 --> 
                <!-- Privalomas, jei „Ėminio laikymo, gabenimo informacija“ nurodyta „Kita“ / Mandatory, if "Specimen holding/transportation details" value "Other" (code "3") -->
                <!-- 8.2.3.3.3 Kita / Other -->
                <text value="+1 laipsnis temperaturoje"/>
            </valueCodeableConcept>
        </extension>
    </container>
</Specimen>
