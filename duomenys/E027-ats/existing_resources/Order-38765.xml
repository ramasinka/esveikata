<?xml version="1.0" encoding="UTF-8"?>
<!-- 1..1 -->
<!-- 5.2.3 - 5.2.8 Siuntimo duomenys / Order data -->
<Order xmlns="http://hl7.org/fhir">

    <!-- 1..1 -->
    <!-- Skyrimo tipas / Order type -->
    <!-- Classificator: order-type -->
    <extension url="http://esveikata.lt/Profile/ltnhr-order#type">
        <valueCodeableConcept>
            <coding>
                <system value="http://esveikata.lt/classifiers/OrderType"/>
                <!-- Values: "1" : Siuntimo konsultuoti, gydyti skyrimas | "2" : Laboratorinio tyrimo skyrimas | "3" : Patologijos tyrimo skyrimas | "4" : Skiepų skyrimas -->
                <code value="1"/>
                <display value="Siuntimo konsultuoti, gydyti skyrimas"/>
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 1..1 -->
    <!-- Sveikatos priežiūros specialisto, sukūrusio siuntimą, profesinė kvalifikacija / Health Care Specialist‘s who made this order Qualification -->
    <extension url="http://esveikata.lt/Profile/ltnhr-order#sourceQualification">
        <valueCodeableConcept>
            <!-- 1..1 -->
            <!-- Specialisto prof. kvalifikacijos kodas / Target specialist prof qualification code -->
            <coding>
                <system value="http://esveikata.lt/classifiers/QualificationCode" />
                <code value="221227" />
                <display value="Gydytojas neurologas" />
            </coding>
        </valueCodeableConcept>
    </extension>
    
    <!-- 1..1 -->
    <!-- Specialisto, pas kurį siunčiama pacientas, prof. kvalifikacija arba skyriaus specializacija / Target specialist Qualification or target department Specialization -->
    <!-- data-element-325 -->
    <extension url="http://esveikata.lt/Profile/ltnhr-order#targetQualification">
        <valueCodeableConcept>
            
            <!-- 0..1 -->
            <!-- Specialisto prof. kvalifikacijos kodas / Target specialist prof qualification code -->
            <coding>
                <system value="http://esveikata.lt/classifiers/QualificationCode" />
                <code value="221227" />
                <display value="Gydytojas neurologas" />
            </coding>
            
            <!-- 0..1 -->
            <!-- Skyriaus specializacija (jeigu nenurodyta prof. kvalifikacija) / Department specialization (in case prof qualification is missing) -->
            <text value="Neurologijos skyrius"/>
        </valueCodeableConcept>
    </extension>
    
    <!-- 0..1 -->
    <!-- Privalomas, jei nurodytas bent vienas skiepo skyrimas / Mandatory if exist at least one Immunization Order -->
    <!-- Skiepo skyrimo data / Immunization Order date -->
    <!-- data-element-1910 -->
    <date value="2014-02-21T09:03:04+11:00"/>

    <!-- 1..1 -->
    <!-- Nuoroda į paciento, kuriam sukurtas skiepo siuntimas, resursą / Patient who has been ordered -->
    <!-- data-element-1 -->
    <subject>
        <reference value="Patient/123456789/_history/1"/>
    </subject>

    <!-- 1..1 -->
    <!-- 5.2.5 Siuntęs gydytojas / Reffering doctor -->
    <!-- data-element-320 -->
    <source>
        <reference value="Practitioner/123/_history/1"/>
    </source>
    
    <!-- 1..1 -->
    <!-- Susijusios diagnozės / Related diagnosis -->
    <reasonResource>
        <reference value="List/423/_history/1"/>
    </reasonResource>
    
    <!-- 1..1 -->
    <!-- Atvykimo duomenys, kurių pagrindu buvo sukurtas šis skyrimo resursas / Encounter where this Order was created at -->
    <detail>
        <reference value="Encounter/1000017570/_history/1000018634"/>
    </detail>

    <!-- 1..1 -->
    <!-- Detalūs skyrimo duomenys ir būsena / Detailed info about what is ordered and its status -->
    <detail>
        <reference value="DiagnosticOrder/123654/_history/1"/>
    </detail>
</Order>
